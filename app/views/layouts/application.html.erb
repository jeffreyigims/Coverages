<!DOCTYPE html>
<html>
  <head>
    <title>Coverages</title>
    <%= csrf_meta_tags %> <%= csp_meta_tag %>

    <!-- Bootstrap Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header>
      <div class="container-fluid" id="top">
        <!-- Partials for the topbar and navigation -->
        <%= render :partial => "partials/topbar" %> 
        <%= render :partial => "partials/nav_admin" %>
      </div>
    </header>
    <main>
      <div class="container-fluid" id="bottom">
        <div class="row">
          <div class="col-12" id="main_content">
            <!-- Flash messages appear here -->
            <div class="card">

            <!-- MAIN CONTENT OF TEMPLATE GOES HERE -->
            <%= yield %>
          </div>
          </div>
        </div>
      </div>
    </main>
    <%= render :partial => "partials/footer" %>
  </body>
</html>
