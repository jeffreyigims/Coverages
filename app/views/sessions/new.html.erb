<div class="card">
  <div class="card-header"></div>
  <div class="card-body">
    <h5 class="card-title">Login</h5>

    <%= form_with url: sessions_path, local: true do |f| %>

    <div class="form-group">
      <label for="username">Username</label>
      <input
        class="form-control"
        id="user_email"
        name="user[username]"
        type="text"
        placeholder="user"
      />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input
        class="form-control"
        id="user_password"
        name="user[password]"
        type="password"
        placeholder="secret"
      />
    </div>
  </div>
  <div class="card-footer">
    <input
      class="btn btn-primary float-right"
      name="commit"
      type="submit"
      value="Log In"
    />
  </div>
  <% end %>
</div>
